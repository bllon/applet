.container {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: initial;
    justify-content: space-between;
    padding: 100rpx 0;
    box-sizing: border-box;
  }
  .nav {
    width: 100%;
    height: auto;
    padding: 0 20px;
  }
  .box {
    width: auto;
    height: 60px;
    line-height:60px;
    text-align:center;
    border-radius: 20px;
    letter-spacing:2px;
    float: left;
    padding:0 10px;
    margin-right: 20px;
    margin-top:20px;
    color: #32aebe;
    background: #f1f6f7;
    font-weight: bold;
    box-shadow: 0px 0px 2px #aaa;
  }
  .add {
    position: fixed;
    width:60px;
    height:60px;
    right:30px;
    bottom:50px;
    background: rgb(214, 73, 30);
    font-size: 40px;
    line-height:55px;
    text-align: center;
    border-radius:50%;
    color: rgb(54, 202, 228);
    opacity:0.8;
    z-index: 999;
}