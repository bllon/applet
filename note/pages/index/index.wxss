/**index.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: initial;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
}
.nav {
  width: 100%;
  height: auto;
  padding: 0 20px;
}
.box {
  width: auto;
  height: 60px;
  line-height:60px;
  text-align:center;
  border-radius: 20%;
  letter-spacing:2px;
  float: left;
  padding:0 20px;
  margin-right: 20px;
  margin-top:20px;
  color: #f56643;
  background: #f1f6f7;
  font-weight: bold;
  box-shadow: 0px 0px 2px #aaa;
}

.placeholder{margin:5px;padding:0 10px;text-align:center;background-color:#fff;height:2.3em;line-height:2.3em;color:var(--weui-FG-1)}