@import './iconfont.wxss';
@import './weui.wxss';

.page-body {
  width:100%;
  height:200px;
  background: rgb(163, 222, 240);
}
.wrapper {
  width: 100%;
  padding-bottom: 5px;
  position: fixed;
  z-index: 999;
  background: #a3def0;
}
.form{
  width: 100%;
  height: 150px;
  background: #fff;
}
#title{
  display: block;
  width: auto;
  height:50px;
  border-bottom:1px solid #ddd;
  font-size:18px;
  font-weight:bold;
  line-height:50px;
  text-align: center;
  letter-spacing: 2px;
}
.section{
  display: block;
  width: 50%;
  height:49px;
  float: left;
  line-height: 49px;
  text-indent: 10px;
  border-bottom:1px solid #ddd
}
.labels{
  display: block;
  width: 100%;
  height:49px;
  line-height:49px;
  float: left;
  background: #fff;
  padding-left:10px;
}
.iconfont {
  display: inline-block;
  padding: 8px 8px;
  width: 24px;
  height: 24px;
  cursor: pointer;
  font-size: 20px;
  color:#888;
}

.toolbar {
  box-sizing: border-box;
  /* border: 1px solid #ccc; */
  border-bottom: 0;
  font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
}


.ql-container {
  box-sizing: border-box;
  padding: 12px 15px;
  margin-bottom: 100px;
  width: 100%;
  min-height: 30vh;
  height: auto;
  /* border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc; */
  background: #fff;
  font-size: 16px;
  line-height: 1.5;
}

.ql-active {
  color: #000;
}

.upload-btn{
  color: #888;
  margin-bottom:100px;
}